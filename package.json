{
  "name": "capytable",
  "version": "0.1.0",
  "description": "JS library for making HTML tables super awesome",
  "homepage": "https://github.com/cadamsmith/capytable",
  "bugs": {
    "url": "https://github.com/cadamsmith/capytable/issues"
  },
  "author": "cadamsmith <cadamsmith.dev@gmail.com> (https://cadamsmith.dev)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cadamsmith/capytable.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "cpy-cli": "^5.0.0",
    "esbuild": "^0.24.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  },
  "scripts": {
    "ci": "npm run build && npm run minify-js && npm run prepare-css && npm run check-format && npm run check-exports",
    "build": "tsc",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "minify-js": "esbuild dist/js/capytable.js --minify --sourcemap --outfile=dist/js/capytable.min.js",
    "prepare-css": "npm run copy-css && npm run minify-css",
    "copy-css": "cpy 'src/capytable.css' dist/css --flat",
    "minify-css": "esbuild dist/css/capytable.css --minify --sourcemap --outfile=dist/css/capytable.min.css"
  },
  "main": "dist/capytable.js"
}
